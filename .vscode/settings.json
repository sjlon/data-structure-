{
  // editor
  "editor.fontSize": 16,
  "editor.fontWeight": "normal",
  "editor.lineHeight": 30,
  "editor.lineNumbers": "on",
  "editor.wordWrap": "on",
  "editor.tabSize": 4,
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.cursorBlinking": "phase",
  "editor.mouseWheelZoom": true,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.dragAndDrop": false,
  "editor.tabCompletion": "on",
  "editor.minimap.enabled": true,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": false,
  // jsx自动修复有问题，取消js的format
  "editor.formatOnSave": true,
  // workbench
  "workbench.activityBar.visible": true,
  "workbench.colorCustomizations": {
    "activityBar.background": "#21222C",
    "activityBar.foreground": "#259AFA"
  },
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.restoreViewState": false,
  "workbench.sideBar.location": "left",
  "workbench.tree.indent": 14,
  "workbench.iconTheme": "vscode-icons",
  // file
  "files.exclude": {
    // "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/bower_components": true,
    "**/jspm_packages": true
    // "**/node_modules": true
  },
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  // html颜色高亮
  "files.associations": {
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript",
    ".eslintrc": "json",
    ".vue": "vue",
    ".nj": "nunjucks",
    ".html": "html",
    "*.html": "html"
  },
  // terminal
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.rendererType": "dom",
  "typescript.check.npmIsInstalled": false,
  "sync.gist": "5ab5aa02e74c77e73f41ad868832d6fe",
  "sync.autoDownload": false,
  "sync.forceDownload": false,
  "sync.forceUpload": true,
  "breadcrumbs.enabled": true,
  "window.restoreWindows": "none",
  "window.openFilesInNewWindow": "on",
  "window.zoomLevel": 2,
  "window.menuBarVisibility": "default",
  "debug.allowBreakpointsEverywhere": true,
  "debug.inlineValues": true,
  "search.followSymlinks": false,
  "emmet.syntaxProfiles": {
    "javascript": "jsx",
    "vue": "html",
    "vue-html": "html"
  },
  "emmet.includeLanguages": {
    "wxml": "html"
  },
  "minapp-vscode.disableAutoConfig": true,
  "vsicons.dontShowNewVersionMessage": true,
  "easysass.excludeRegex": "^_",

  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
  "workbench.colorTheme": "Monokai",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    // "typescript",
    "typescriptreact",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "HTML (Eex)"
  ],
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "backgroundColor": "transparent"
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "backgroundColor": "transparent"
    }
  ],
  "git.enableSmartCommit": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorStyle": "line",

  "vetur.format.defaultFormatter.js": "prettier", // 让vue中的js按编辑器自带的ts格式进行格式化
  "vetur.format.defaultFormatter.html": "prettier",
  "vetur.format.options.tabSize": 4,
  "vetur.format.options.useTabs": true,
  "vetur.validation.template": true,
  "vetur.format.defaultFormatterOptions": {
    "prettyhtml": {
      "printWidth": 260,
      "singleQuote": false,
      "tabWidth": 4,
      "useTabs": true,
      "wrapAttributes": false,
      "sortAttributes": false,
      "semi": false
    },
    "prettier": {
      "tabWidth": 4,
      "useTabs": true,
      "semi": false,
      "singleQuote": true,
      "proseWrap": "never",
      "printWidth": 260,
      "bracketSpacing": true,
      "wrap_attributes": "auto",
      "end_with_newline": true
    }
  },
  // Enable/disable default JavaScript formatter (For Prettier)
  // prettier
  // // 不格式化vue文件，vue文件的格式化单独设置
  "prettier.disableLanguages": ["vue"],
  "prettier.endOfLine": "lf",
  "prettier.printWidth": 260,
  "prettier.bracketSpacing": true, // 在对象，数组括号与文字之间加空格 "{ foo: bar }"
  "prettier.jsxBracketSameLine": true,
  "prettier.jsxSingleQuote": true,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 4,
  "prettier.useTabs": true,
  "prettier.arrowParens": "avoid",
  "prettier.packageManager": "yarn",
  "css.lint.important": "warning",
  "css.lint.idSelector": "warning",
  "css.lint.universalSelector": "warning",

  "javascript.format.insertSpaceAfterConstructor": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true, // 让函数(名)和后面的括号之间加个空格
  "javascript.format.insertSpaceAfterSemicolonInForStatements": true,
  "javascript.updateImportsOnFileMove.enabled": "always" // 去掉代码结尾的分号
}
